{
  "name": "hellocsharp",
  "version": "1.0.0",
  "description": "ASP.NET Core MVC の基礎を学ぶための実践的なサンプルプロジェクトです。",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npm run build:home && npm run build:attribute && npm run build:user",
    "build:dev": "npm run build:home:dev && npm run build:attribute:dev && npm run build:user:dev",
    "build:home": "esbuild Scripts/react/pages/HomePage.tsx --bundle --outfile=wwwroot/js/react/home-page.js --minify",
    "build:home:dev": "esbuild Scripts/react/pages/HomePage.tsx --bundle --outfile=wwwroot/js/react/home-page.js --sourcemap",
    "build:attribute": "esbuild Scripts/react/pages/AttributePage.tsx --bundle --outfile=wwwroot/js/react/attribute-page.js --minify",
    "build:attribute:dev": "esbuild Scripts/react/pages/AttributePage.tsx --bundle --outfile=wwwroot/js/react/attribute-page.js --sourcemap",
    "build:user": "esbuild Scripts/react/pages/UserPage.tsx --bundle --outfile=wwwroot/js/react/user-page.js --minify",
    "build:user:dev": "esbuild Scripts/react/pages/UserPage.tsx --bundle --outfile=wwwroot/js/react/user-page.js --sourcemap",
    "watch:home": "esbuild Scripts/react/pages/HomePage.tsx --bundle --outfile=wwwroot/js/react/home-page.js --sourcemap --watch",
    "watch:attribute": "esbuild Scripts/react/pages/AttributePage.tsx --bundle --outfile=wwwroot/js/react/attribute-page.js --sourcemap --watch",
    "watch:user": "esbuild Scripts/react/pages/UserPage.tsx --bundle --outfile=wwwroot/js/react/user-page.js --sourcemap --watch",
    "build:ts": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Takuma1221/HelloCSharp.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Takuma1221/HelloCSharp/issues"
  },
  "homepage": "https://github.com/Takuma1221/HelloCSharp#readme",
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "esbuild": "^0.27.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
